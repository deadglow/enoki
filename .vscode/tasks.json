{
	"tasks": [
		// premake clean
		{
			"label": "premake-clean",
			"type": "cppbuild",
			"command": "premake5",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none"
			},
			"detail": "Generate premake files."
		},
		// premake generate
		{
			"label": "premake-generate",
			"type": "cppbuild",
			"command": "premake5",
			"args": [
				"gmake2"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none"
			},
			"detail": "Generate premake files.",
			"dependsOn":[
			]
		},
		// make
		{
			"label": "mingw32-make",
			"type": "cppbuild",
			"command": "mingw32-make.exe",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}\\build\\opengles-renderer"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Run generated files.",
			"dependsOn":[
				"premake-generate"
			]
		},
		{
			"label": "make",
			"type": "cppbuild",
			"command": "make",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}\\build\\opengles-renderer"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Run generated files.",
			"dependsOn":[
				"premake-generate"
			]
		},

	],
	"version": "2.0.0"
}