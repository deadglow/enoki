{
	"tasks": [
		// premake clean
		{
			"label": "premake-clean",
			"type": "cppbuild",
			"command": "premake5",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none"
			},
			"detail": "Generate premake files."
		},
		// premake generate
		{
			"label": "premake-generate",
			"type": "cppbuild",
			"command": "premake5",
			"args": [
				"gmake2"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none"
			},
			"detail": "Generate premake files.",
			"dependsOn":[
			]
		},
		// make
		{
			"label": "make",
			"type": "cppbuild",
			"command": "mingw32-make.exe",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}\\build\\opengles-renderer"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Run generated files.",
			"dependsOn":[
				"premake-generate"
			]
		},

		// g++
		{
			"type": "cppbuild",
			"label": "Build project",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++17",
				"-g",
				
				"${workspaceFolder}\\src\\*.cpp",
				
				"-I${workspaceFolder}\\include",
				"-L${workspaceFolder}\\lib",
				
				//"-Wall",
				
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-opengl32",

				"-o",
				"${workspaceFolder}\\bin\\renderer"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}